{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/check-scheduled-posts",
      "schedule": "* * * * *"
    }
  ],
  "env": {
    "CRON_SECRET": "@cron_secret"
  }
}
